<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="root" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="app.deyal.deyal_app.controllers.ChangePasswordController">
    <VBox fx:id="contentRoot" alignment="CENTER" spacing="35.0">
        <children>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="oldPasswordField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                                  promptText="Current password"/>
            </HBox>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="newPasswordField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                                  promptText="Enter new password"/>
            </HBox>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="newPasswordRepeatField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                                  promptText="Re-enter new password"/>
            </HBox>
            <HBox alignment="CENTER" spacing="100.0">
                <JFXButton fx:id="submitButton" buttonType="RAISED" defaultButton="true"
                           onAction="#handleSubmitButtonAction" prefHeight="25.0" prefWidth="125.0" text="Change"/>
                <JFXButton fx:id="cancelButton" buttonType="RAISED" cancelButton="true"
                           onAction="#handleCancelButtonAction" prefHeight="40.0" prefWidth="125.0" text="Close"/>
            </HBox>
        </children>
        <padding>
            <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
        </padding>
    </VBox>
</StackPane>
