<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="35.0" styleClass="root"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.deyal.deyal_app.controllers.ViewProfileController">
    <children>
        <HBox alignment="CENTER" spacing="10.0">
            <GridPane alignment="CENTER" hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label styleClass="label-view" text="User Name:"/>
                    <Label fx:id="userNameLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"/>
                    <Label styleClass="label-view" text="Full Name:" GridPane.rowIndex="1"/>
                    <Label fx:id="fullNameLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                    <Label styleClass="label-view" text="Email:" GridPane.rowIndex="2"/>
                    <Label fx:id="emailLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
                    <Label styleClass="label-view" text="Mobile Number:" GridPane.rowIndex="3"/>
                    <Label fx:id="phoneNumberLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>
                    <Label styleClass="label-view" text="Date of Birth:" GridPane.rowIndex="4"/>
                    <Label fx:id="birthDateLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="4"/>
                    <Label styleClass="label-view" text="House Address:" GridPane.rowIndex="5"/>
                    <Label fx:id="houseLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="5"/>
                    <Label styleClass="label-view" text="Block Address:" GridPane.rowIndex="6"/>
                    <Label fx:id="blockLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="6"/>
                    <Label styleClass="label-view" text="District:" GridPane.rowIndex="7"/>
                    <Label fx:id="districtLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="7"/>
                    <Label styleClass="label-view" text="Police Station:" GridPane.rowIndex="8"/>
                    <Label fx:id="policeStationLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                    <Label styleClass="label-view" text="Post-Office:" GridPane.rowIndex="9"/>
                    <Label fx:id="postOfficeLabel" styleClass="label-content" text="Unknown" GridPane.columnIndex="1"
                           GridPane.rowIndex="9"/>
                </children>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </GridPane>
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <ImageView fx:id="avatarImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@../../../../images/user_avatar.png"/>
                </ImageView>
                <GridPane alignment="CENTER_LEFT" hgap="15.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label styleClass="label-view" text="Rating as Client:"/>
                    <Label fx:id="ratingClientLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1"/>
                    <Label styleClass="label-view" text="Rating as Contractor:" GridPane.rowIndex="1"/>
                    <Label fx:id="ratingContractorLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label styleClass="label-view" text="Mission Created:" GridPane.rowIndex="2"/>
                    <Label fx:id="missionCreatedLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label styleClass="label-view" text="Mission Completed:" GridPane.rowIndex="3"/>
                    <Label fx:id="missionCompletedLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Label styleClass="label-view" text="Mission Failed:" GridPane.rowIndex="4"/>
                    <Label fx:id="missionFailedLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    <Label styleClass="label-view" text="Reputation (max 10):" GridPane.rowIndex="5"/>
                    <Label fx:id="reputationLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    <Label styleClass="label-view" text="Registered:" GridPane.rowIndex="6"/>
                    <Label fx:id="accountAgeLabel" styleClass="label-content" text="Unknown"
                           GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </GridPane>
            </VBox>
        </HBox>
        <JFXButton buttonType="RAISED" cancelButton="true" mnemonicParsing="false" onAction="#handleCloseButtonAction"
                   prefHeight="30.0" prefWidth="150.0" text="Close"/>
    </children>
    <padding>
        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
    </padding>
</VBox>
