<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="root" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="app.deyal.deyal_app.controllers.EditProfileController">
    <VBox fx:id="contentRoot" alignment="CENTER_LEFT" spacing="35.0">
        <children>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="USER_CIRCLE" size="40.0"/>
                <JFXTextField fx:id="userNameTextField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                              promptText="User name"/>
            </HBox>
            <HBox spacing="40.0">
                <JFXTextField fx:id="firstNameTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="First name"/>
                <JFXTextField fx:id="lastNameTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="Last name"/>
            </HBox>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="PHONE" size="40.0"/>
                <JFXTextField fx:id="phoneNumberTextField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                              promptText="Phone number (ex. 01900000000)"/>
            </HBox>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="CALENDAR" size="40.0"/>
                <DatePicker fx:id="birthDatePicker" prefHeight="40.0" prefWidth="350.0"
                            promptText="Pick Your Date of Birth"/>
            </HBox>
            <HBox spacing="40.0">
                <JFXTextField fx:id="houseAddressTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="House Address"/>
                <JFXTextField fx:id="blockAddressTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="Block/Road Number"/>
            </HBox>
            <HBox spacing="10.0">
                <FontAwesomeIconView glyphName="HOME" size="40.0"/>
                <JFXTextField fx:id="districtTextField" labelFloat="true" prefHeight="40.0" prefWidth="350.0"
                              promptText="District Name"/>
            </HBox>
            <HBox spacing="40.0">
                <JFXTextField fx:id="policeStationTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="Police Station"/>
                <JFXTextField fx:id="postOfficeTextField" labelFloat="true" prefHeight="40.0" prefWidth="180.0"
                              promptText="Post-Office Number"/>
            </HBox>
            <HBox alignment="CENTER" spacing="50.0">
                <JFXButton buttonType="RAISED" defaultButton="true" mnemonicParsing="false"
                           onAction="#handleSaveButtonAction" prefHeight="25.0" prefWidth="150.0" text="Save"/>
                <JFXButton buttonType="RAISED" cancelButton="true" mnemonicParsing="false"
                           onAction="#handleCancelButtonAction" prefHeight="25.0" prefWidth="150.0" text="Cancel"/>
            </HBox>
        </children>
        <padding>
            <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
        </padding>
    </VBox>
</StackPane>
