<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="root" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="app.deyal.deyal_app.controllers.SubmitMissionController">
    <VBox fx:id="contentRoot" alignment="CENTER" spacing="35.0">
        <children>
            <HBox alignment="CENTER">
                <Label styleClass="label-title" text="Give proof of work"/>
            </HBox>
            <HBox alignment="CENTER">
                <JFXTextArea fx:id="messageTextArea" prefHeight="200.0" prefWidth="400.0"
                             promptText="Include what you did, the process and final result."
                             text="Process of finishing the mission: &#10;&#10;Final result: "/>
            </HBox>
            <HBox alignment="CENTER">
                <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleSubmitButtonAction"
                           prefHeight="25.0" prefWidth="150.0" text="Submit"/>
            </HBox>
        </children>
        <padding>
            <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
        </padding>
    </VBox>
</StackPane>
