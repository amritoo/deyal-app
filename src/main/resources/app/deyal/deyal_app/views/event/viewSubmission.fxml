<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="35" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.deyal.deyal_app.controllers.ViewSubmissionController">
    <children>
        <HBox alignment="CENTER">
            <Label styleClass="label-title" text="Proof of work given by contractor"/>
        </HBox>
        <JFXTextArea fx:id="messageTextArea" editable="false" prefHeight="200.0" prefWidth="400.0"
                     text="No Proof of Work Given"/>
        <HBox alignment="CENTER" spacing="75.0">
            <JFXButton mnemonicParsing="false" onAction="#handleApproveButtonAction" prefHeight="25.0" prefWidth="150.0"
                       text="Approve"/>
            <JFXButton mnemonicParsing="false" onAction="#handleRejectButtonAction" prefHeight="25.0" prefWidth="150.0"
                       text="Reject"/>
        </HBox>
    </children>
    <padding>
        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
    </padding>
</VBox>
